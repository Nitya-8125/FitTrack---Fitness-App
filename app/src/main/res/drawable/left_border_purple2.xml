<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background (fill with purple_200 or transparent if you want no fill) -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
        </shape>
    </item>

    <!-- Left border (purple_500 strip) -->
    <item android:width="6dp" android:left="0dp" android:right="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/purple_500"/>
        </shape>
    </item>

</layer-list>
