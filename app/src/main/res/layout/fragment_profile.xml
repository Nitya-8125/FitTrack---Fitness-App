<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgSurface"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="12dp">

        <!-- Header card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            android:background="@drawable/bg_profile_header">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:background="@drawable/bg_profile_header">

                <!-- Avatar circle -->
                <FrameLayout
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/circle_bg"
                    android:foregroundGravity="center">

                    <TextView
                        android:id="@+id/tvInitials"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="JD"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/white" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp">

<!--                    <TextView-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:text="John Doe"-->
<!--                        android:textColor="@color/white"-->
<!--                        android:textStyle="bold"-->
<!--                        android:textSize="20sp" />-->

                    <TextView
                        android:id="@+id/tvEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="xyzabc153@gmail.com"
                        android:textColor="@color/white_80"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvPremium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Premium"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:textColor="@color/purple_700"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_marginTop="6dp"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLogout"
                    style="@style/Widget.Material3.Button.ElevatedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:textColor="@color/purple_700"
                    android:textSize="12dp"
                    app:backgroundTint="@color/white"
                    app:cornerRadius="16dp"
                    app:iconTint="@color/purple_700" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Personal Information -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="3dp"
            app:strokeWidth="0dp"
            android:layout_marginTop="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Personal Information"
                    android:textColor="@color/textPrimary"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:drawablePadding="8dp"
                    android:drawableStart="@drawable/ic_profile"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingEnd="8dp">


                        <View style="@style/DividerThin"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="8dp">



                        <View style="@style/DividerThin" />


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Goals -->
        <!-- Goals -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="3dp"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/left_border_purple2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Set Your Goals"
                    android:textColor="@color/textPrimary"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:drawableStart="@drawable/ic_target"
                    android:drawablePadding="8dp"/>

                <!-- Steps goal -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp">

                    <TextView
                        style="@style/FieldLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Daily Steps Goal"/>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/FieldContainer"
                        app:startIconDrawable="@drawable/ic_steps"
                        app:suffixText="Steps">

                        <!-- Corrected ID -->
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etStepsGoal"
                            android:inputType="number"
                            android:text="10000"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- Calories goal -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="6dp">

                    <TextView
                        style="@style/FieldLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Daily Calories Goal"/>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/FieldContainer"
                        app:startIconDrawable="@drawable/ic_calories"
                        app:suffixText="Cal">

                        <!-- Corrected ID -->
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etCaloriesGoal"
                            android:inputType="number"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:text="2000"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- Target weight -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="6dp">

                    <TextView
                        style="@style/FieldLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Target Weight"/>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/FieldContainer"
                        app:startIconDrawable="@drawable/ic_weight"
                        app:suffixText="Kg">

                        <!-- Corrected ID -->
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etTargetWeight"
                            android:inputType="numberDecimal"
                            android:text="70"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- Save Goals Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnUpdateGoals"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Save Goals" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Goals are automatically saved and persist between sessions."
                    android:textSize="12sp"
                    android:textColor="@color/textSecondary"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
