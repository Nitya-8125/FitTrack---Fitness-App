<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Circle fill color -->
    <solid android:color="@color/teal_700" />

    <!-- Optional border -->
    <stroke
        android:width="2dp"
        android:color="@color/teal_900" />

    <!-- Size (ensures it's a circle) -->
    <size
        android:width="64dp"
        android:height="64dp" />
</shape>
