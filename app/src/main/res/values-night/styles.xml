<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Smaller labels -->
    <style name="LabelSmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/textSecondary</item> <!-- darker gray -->
    </style>

    <!-- Large values -->
    <style name="ValueLarge">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textPrimary</item> <!-- light text -->
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- Thin divider -->
    <style name="DividerThin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/surface_stroke</item>
        <item name="android:layout_marginVertical">8dp</item>
    </style>

    <!-- Field labels -->
    <style name="FieldLabel">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/textSecondary</item>
    </style>

    <!-- TextInput / Field container -->
    <style name="FieldContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxBackgroundColor">@color/surface</item> <!-- darker bg -->
    </style>

    <!-- Dashboard info cards -->
    <style name="Dashboard.InfoCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">2dp</item>
        <item name="strokeColor">@color/surface_stroke</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardBackgroundColor">@color/bgSurface</item>
    </style>

    <!-- Dashboard chart cards -->
    <style name="Dashboard.ChartCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">2dp</item>
        <item name="strokeColor">@color/surface_stroke</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardBackgroundColor">@color/bgSurface</item>
        <item name="android:layout_marginBottom">14dp</item>
    </style>

</resources>
