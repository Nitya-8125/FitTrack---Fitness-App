<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:orientation="vertical">

            <!-- Top Analytics gradient card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="18dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="3dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@drawable/bg_analytics_gradient"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvAnalyticsTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Analytics ðŸ“Š"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/tvProgressRight"
                        app:layout_goneMarginEnd="8dp"/>

                    <TextView
                        android:id="@+id/tvAnalyticsSub"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Deep-dive into your fitness progress and insights"
                        android:textColor="@color/white_80"
                        android:textSize="13sp"
                        app:layout_constraintStart_toStartOf="@id/tvAnalyticsTitle"
                        app:layout_constraintTop_toBottomOf="@id/tvAnalyticsTitle"
                        app:layout_constraintEnd_toStartOf="@+id/tvProgressRight"
                        app:layout_goneMarginEnd="8dp"
                        android:maxLines="2"/>

                    <TextView
                        android:id="@+id/tvProgressRight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="85%\nOverall\nProgress"
                        android:textAlignment="viewEnd"
                        android:gravity="end"
                        android:lineSpacingExtra="2dp"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Info cards row-by-row -->
            <com.google.android.material.card.MaterialCardView
                style="@style/Dashboard.InfoCard"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="14dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:gravity="center"
                        android:text="âœ…"
                        android:textSize="18sp"
                        android:background="@drawable/bg_icon_circle_teal"
                        android:padding="6dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp">

                        <TextView
                            android:text="Great Progress!"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"/>

                        <TextView
                            android:text="Your weekly step count increased by 12% compared to last month."
                            android:textSize="13sp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textColor="@color/text_secondary"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                style="@style/Dashboard.InfoCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="14dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:gravity="center"
                        android:text="ðŸ”"
                        android:textSize="18sp"
                        android:background="@drawable/bg_icon_circle_blue"
                        android:padding="6dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp">

                        <TextView
                            android:text="Consistent Performance"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"/>

                        <TextView
                            android:text="Youâ€™ve maintained steady workout frequency for 3 weeks."
                            android:textSize="13sp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textColor="@color/text_secondary"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                style="@style/Dashboard.InfoCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="14dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:gravity="center"
                        android:text="ðŸŒž"
                        android:textSize="18sp"
                        android:background="@drawable/bg_icon_circle_amber"
                        android:padding="6dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp">

                        <TextView
                            android:text="Room for Growth"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"/>

                        <TextView
                            android:text="Consider increasing your daily calorie burn target by 10%."
                            android:textSize="13sp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textColor="@color/text_secondary"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Tabs -->
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabMode="fixed"
                app:tabIndicator="@drawable/bg_tab_indicator"
                app:tabIndicatorFullWidth="false"
                app:tabTextColor="@color/text_secondary"
                android:contentDescription="Analysis Tabs: Progress, Trends, Goals"
                app:tabSelectedTextColor="@color/primary_600"/>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>