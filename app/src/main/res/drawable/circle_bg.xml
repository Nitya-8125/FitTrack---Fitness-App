<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Circle fill color -->
    <solid android:color="#E3F2FD" /> <!-- Light blue like in screenshot -->

    <!-- Optional border around circle -->
    <stroke
        android:width="1dp"
        android:color="#90CAF9" /> <!-- Slightly darker blue border -->

    <!-- Padding inside if needed -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />

    <!-- Circle size is defined by the ImageView size, not here -->
</shape>
